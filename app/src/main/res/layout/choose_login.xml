<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Scenario_choose_login.controller.choose_login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_400sdp"
        android:src="@drawable/auth_curve"/>
    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/back"
        android:src="@drawable/back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".45"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/auth_logo"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".55"
            android:gravity="top|center"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_30sdp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textStyle="bold"
                android:text="@string/user"
                android:id="@+id/user"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/button_1_bg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@color/line_color"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textStyle="bold"
                android:text="@string/winch_owner"
                android:id="@+id/winch_owner"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/button_2_bg"/>

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>