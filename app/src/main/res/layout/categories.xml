<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Scenario_main_screen.Controller.Secnario_Categories.categories">

    <include layout="@layout/tool_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp"
        android:text="@string/how_we_can_help_you_today" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:weightSum="1">
            <RelativeLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:id="@+id/winch"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/winch_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/winch"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/home_service_icon"
                    android:textSize="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_90sdp"
                    android:layout_alignBottom="@+id/winch_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/winch"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:layout_alignBottom="@+id/winch_img"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:id="@+id/twentyfour"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/twentyfour_image"
                    android:scaleType="fitXY"
                    android:src="@drawable/twentyfour"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/repair"
                    android:textSize="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_90sdp"
                    android:layout_alignBottom="@+id/twentyfour_image"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_24_7"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:layout_alignBottom="@+id/twentyfour_image"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:weightSum="1">
            <RelativeLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/home"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_service"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/home_service_icon"
                    android:textSize="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_90sdp"
                    android:layout_alignBottom="@+id/home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_service"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_45sdp"
                    android:layout_alignBottom="@+id/home"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/industerial"
                    android:scaleType="fitXY"
                    android:src="@drawable/industerial_service"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/industerial_service_icon"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/industerial_service_icon"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_90sdp"
                    android:layout_alignBottom="@+id/industerial"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="industerial \nservices"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_45sdp"
                    android:layout_alignBottom="@+id/industerial"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>